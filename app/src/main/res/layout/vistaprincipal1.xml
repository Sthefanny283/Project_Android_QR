<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/perfil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/baseline_menu_24" />

        <TextView
            android:id="@+id/txt_nombreEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="SG3 PERU" />

        <ImageView
            android:id="@+id/img_perfil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/man" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#09880E"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:columnCount="2"
            android:gravity="center"
            android:layout_weight="1">

            <!-- Columna 1 -->
            <Button
                android:id="@+id/btnPerfil"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green"
                android:drawableLeft="@drawable/baseline_person_2_24"
                android:drawablePadding="5dp"
                android:text="Perfil"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn_marcarAsistencia"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green"
                android:drawableLeft="@drawable/baseline_watch_later_24"
                android:drawablePadding="5dp"
                android:text="Marcar Asistencia"
                android:textColor="#000000"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_horario"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green"
                android:drawableLeft="@drawable/baseline_calendar_month_24"
                android:drawablePadding="5dp"
                android:text="Horario"
                android:textColor="#000000" />

            <!-- Columna 2 -->
            <Button
                android:id="@+id/btn_registroAsistencia"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green"
                android:drawableLeft="@drawable/baseline_app_registration_24"
                android:drawablePadding="5dp"
                android:text="Registro de Asistencia"
                android:textColor="#000000"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_boleta"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green"
                android:drawableLeft="@drawable/baseline_sticky_note_2_24"
                android:drawablePadding="5dp"
                android:text="Boleta"
                android:textColor="#000000" />

        </GridLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start" />


</LinearLayout>